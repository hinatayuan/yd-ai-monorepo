{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@yd/libs": ["packages/yd-libs/src/index.ts"],
      "@yd/libs/*": ["packages/yd-libs/src/*"],
      "@yd/hooks": ["packages/yd-hooks/src/index.ts"],
      "@yd/hooks/*": ["packages/yd-hooks/src/*"]
    }
  }
}
