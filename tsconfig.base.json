{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@yd/libs": ["packages/yd-libs/dist/types/index"],
      "@yd/hooks": ["packages/yd-hooks/dist/types/index"],
      "react": ["packages/react/dist/types/index"],
      "react/jsx-runtime": ["packages/react/dist/types/jsx-runtime"],
      "react-dom": ["packages/react-dom/dist/types/index"],
      "react-dom/client": ["packages/react-dom/dist/types/client"]
    }
  }
}
